{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint --ignore-path .gitignore . --ext ts --ext tsx --ext js",
    "format": "stylelint --fix \"**/*.{css,scss,sass}\" && prettier --ignore-path .gitignore --write \"**/*.+(js|ts|tsx|json|html|md)\""
  },
  "dependencies": {
    "@chakra-ui/react": "^1.3.4",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@types/js-cookie": "^2.2.6",
    "axios": "^0.21.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "framer-motion": "^3.10.6",
    "js-cookie": "^2.2.1",
    "jwt-decode": "^3.1.2",
    "next": "10.0.9",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.2.0",
    "react-idle-timer": "^4.5.6",
    "react-query": "^3.12.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "stylefmt": "^6.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn type-check"
    }
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "yarn lint",
      "yarn format"
    ],
    "**/*.+(json|html)": [
      "yarn format"
    ],
    "**/*.+(css|sass|less|scss)": [
      "stylefmt",
      "stylelint --fix",
      "yarn format"
    ]
  }
}
