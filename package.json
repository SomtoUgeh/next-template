{
  "name": "template",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "lint": "eslint --ignore-path .gitignore --cache --ext .js,.ts,.tsx . --fix",
    "format": "prettier --ignore-path .gitignore -w '**/*.+(js|ts|tsx|json|css|html|md)'",
    "format-styles": "stylelint --fix '**/*.{css,scss,sass}'",
    "validate": "npm-run-all --parallel type-check lint format",
    "test": "jest src",
    "test:watch": "yarn run test -- --watch"
  },
  "dependencies": {
    "@chakra-ui/react": "^1.3.4",
    "@emotion/react": "^11.1.5",
    "@emotion/styled": "^11.1.5",
    "@types/js-cookie": "^2.2.6",
    "axios": "^0.21.1",
    "framer-motion": "^3.10.6",
    "js-cookie": "^2.2.1",
    "jwt-decode": "^3.1.2",
    "next": "10.0.9",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "react-icons": "^4.2.0",
    "react-idle-timer": "^4.5.6",
    "react-query": "^3.12.3"
  },
  "devDependencies": {
    "@babel/core": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@testing-library/dom": "^7.30.0",
    "@testing-library/jest-dom": "^5.11.9",
    "@testing-library/react": "^11.2.5",
    "@testing-library/user-event": "^13.0.6",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.14.35",
    "@types/react": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "babel-eslint": "^10.0.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-config-react-app": "^6.0.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-react": "^7.20.3",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-testing-library": "^3.9.0",
    "husky": "=4",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.1",
    "lint-staged": "^10.5.4",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "react-test-renderer": "^17.0.1",
    "stylefmt": "^6.0.3",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "typescript": "^4.2.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn validate && yarn format-styles"
    }
  },
  "lint-staged": {
    "**/*.+(js|ts|tsx)": [
      "yarn lint",
      "yarn format"
    ],
    "**/*.+(json|html)": "yarn format",
    "**/*.+(css|sass|scss)": [
      "stylefmt",
      "yarn format-styles"
    ]
  }
}
